extends layout

block content
    .container
        h1.title Stations
        table.table.is-fullwidth.is-striped
            thead
                tr
                    th Name
                    th Market
                    th(colspan=2) Type
            tbody
                each station in stations
                    tr
                        td= station.name
                        td= station.market
                        td= station.type
                        td.has-text-right
                            a(href=`/stations/${station.id}`) View details